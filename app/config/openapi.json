                    },
                    "lng": {
                        "type": "number",
                        "format": "double"
                    },
                    "scheduledAtISO": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            },
            "BookingResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "serviceName": {
                        "type": "string"
                    },
                    "categoryName": {
                        "type": "string"
                    },
                    "scheduledAtISO": {
                        "type": "string"
                    },
                    "addressLine1": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "PENDING",
                            "CONFIRMED",
                            "DECLINED",
                            "CANCELLED",
                            "COMPLETED"
                        ]
                    },
                    "paid": {
                        "type": "boolean"
                    },
                    "clientId": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "providerId": {
                        "type": "integer",
                        "format": "int64"
                    }
                }
            },
            "RegisterRequest": {
                "required": [
                    "password"
                ],
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "AuthResponse": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "email": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "CLIENT",
                            "PROVIDER",
                            "ADMIN"
                        ]
                    },
                    "jwt": {
                        "type": "string"
                    }
                }
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
