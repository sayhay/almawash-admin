                    },
                    "clientEmail": {
                        "type": "string"
                    },
                    "providerEmail": {
                        "type": "string"
                    },
                    "serviceName": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    },
                    "status": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "FcmTokenRequest": {
                "required": [
                    "token"
                ],
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
