                "required": [
                    "addressLine1",
                    "city",
                    "scheduledAtISO",
                    "serviceId"
                ],
                "type": "object",
                "properties": {
                    "serviceId": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "addressLine1": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "lat": {
                        "type": "number",
